# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/fullstack_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=your_mongodb_connection_string_here

# JWT Configuration (generate your own random strings)
JWT_SECRET=generate_a_random_32_character_string
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=generate_another_random_32_character_string
JWT_REFRESH_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Groq AI API Key (Get free key from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here
